@page
@model MoodTracker.Pages.MoodEntries.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>MoodEntry</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MoodEntry.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoodEntry.User.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MoodEntry.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoodEntry.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MoodEntry.MoodScore)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoodEntry.MoodScore)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MoodEntry.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoodEntry.Notes)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MoodEntry.Moods)
        </dt>
        <dd class="col-sm-10">
            <ul class="ul">
                @foreach (var mood in Model.MoodEntry.Moods)
                {
                    <li>@Html.DisplayFor(modelItem => mood.Name)</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.MoodEntry.Id">Edit</a> |
    <a asp-page="./Delete" asp-route-id="@Model.MoodEntry.Id">Delete</a> |
    <a asp-page="./Index">Back to List</a>
</div>
